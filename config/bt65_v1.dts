/dts-v1/;
/ {
    model = "BT65 V1 Custom Keyboard";
    compatible = "zmk,bt65_v1", "nordic,nrf52840-qiaa";

    chosen {
        zephyr,console = &uart0;
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
    };
};

/* Memori */
&flash0 {
    reg = <0x00000000 0x100000>;
};

&sram0 {
    reg = <0x20000000 0x40000>;
};

/* GPIO aktif */
&gpio0 { status = "okay"; };
&gpio1 { status = "okay"; };

/* I2C0 aktif untuk OLED */
&i2c0 {
    compatible = "nordic,nrf-twi";
    status = "okay";
    clock-frequency = <I2C_BITRATE_STANDARD>;
    pinctrl-0 = <&i2c0_default>;
    pinctrl-names = "default";
};

/* Definisi pinctrl I2C0 */
&pinctrl {
    i2c0_default: i2c0_default {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 1, 0)>, /* P1.00 */
                    <NRF_PSEL(TWIM_SCL, 0, 11)>; /* P0.11 */
        };
    };
};

/* Matikan peripheral yang tidak dipakai */
&spi0 { status = "disabled"; };
&spi1 { status = "disabled"; };
&spi2 { status = "disabled"; };
&i2c1 { status = "disabled"; };
&uart1 { status = "disabled"; };
&pwm0 { status = "disabled"; };
&pwm1 { status = "disabled"; };
&pwm2 { status = "disabled"; };
&nfct { status = "disabled"; };
